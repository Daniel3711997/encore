{
    "name": "@unpack/encore",
    "version": "0.1.0",
    "license": "MIT",
    "source": "./src/index.tsx",
    "main": "./lib/commonjs/index.js",
    "module": "./lib/module/index.js",
    "description": "Lorem Ipsum is simply dummy text of the printing and typesetting industry.",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "exports": {
        ".": {
            "import": {
                "default": "./lib/module/index.js",
                "types": "./lib/typescript/module/src/index.d.ts"
            },
            "require": {
                "default": "./lib/commonjs/index.js",
                "types": "./lib/typescript/commonjs/src/index.d.ts"
            }
        }
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "test": "jest",
        "knip": "knip",
        "typecheck": "tsc",
        "clean": "del-cli lib",
        "prepare": "bob build",
        "postinstall": "husky",
        "release": "release-it",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "check-engine": "check-engine",
        "commit": "git add . && git-cz",
        "example": "yarn workspace @unpack/encore-example",
        "check-spell": "cspell --dot --no-progress --no-must-find-files \"**/*.{js,jsx,ts,tsx,json}\"",
        "lint": "yarn check-engine && yarn check-spell && tsc --noEmit && eslint \"**/*.{js,jsx,ts,tsx}\" --no-error-on-unmatched-pattern"
    },
    "keywords": [
        "ios",
        "theme",
        "android",
        "responsive",
        "react-native"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Daniel3711997/encore.git"
    },
    "author": "Onofrei Costinel Danut <onofreicostineldanut12@gmail.com> (https://github.com/Daniel3711997)",
    "bugs": {
        "url": "https://github.com/Daniel3711997/encore/issues"
    },
    "homepage": "https://github.com/Daniel3711997/encore#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "eslint --no-error-on-unmatched-pattern"
        ],
        "**/*.{js,jsx,ts,tsx,json}": [
            "prettier --write",
            "cspell --dot --no-progress --no-must-find-files"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@commitlint/cz-commitlint": "^19.5.0",
        "@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
        "@react-native/eslint-config": "^0.75.3",
        "@release-it/conventional-changelog": "^8.0.2",
        "@types/css-mediaquery": "^0.1.4",
        "@types/jest": "^29.5.13",
        "@types/lodash.isequal": "^4.5.8",
        "@types/node": "^22.5.5",
        "@types/react": "^18.3.7",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "babel-preset-expo": "^11.0.14",
        "check-engine": "^1.12.0",
        "commitizen": "^4.3.0",
        "cspell": "^8.14.4",
        "del-cli": "^5.1.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.6.0",
        "eslint-plugin-react": "^7.36.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-native": "^4.1.0",
        "eslint-plugin-react-native-a11y": "^3.5.0",
        "eslint-plugin-sort-exports": "^0.9.1",
        "husky": "^9.1.6",
        "inquirer": "9",
        "jest": "^29.7.0",
        "knip": "^5.30.2",
        "lint-staged": "^15.2.10",
        "pinst": "^3.0.0",
        "prettier": "^3.3.3",
        "react": "18.3.1",
        "react-native": "0.75.3",
        "react-native-builder-bob": "^0.30.2",
        "release-it": "^17.6.0",
        "typescript": "~5.5.0"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "workspaces": [
        "example"
    ],
    "packageManager": "yarn@3.6.1",
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "create-react-native-library": {
        "type": "library",
        "version": "0.41.2"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "commonjs",
                {
                    "esm": true
                }
            ],
            [
                "module",
                {
                    "esm": true
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json",
                    "esm": true
                }
            ]
        ]
    },
    "dependencies": {
        "css-mediaquery": "^0.1.2",
        "lodash.isequal": "^4.5.0",
        "utility-types": "^3.11.0"
    }
}
